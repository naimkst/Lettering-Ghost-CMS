{{!< default}}
{{#post}} 
<main class="main-content-area section-padding-bottom clearfix">
   <div class="page-wrapper blog-details-page">
               {{#if feature_image}}
               <div class="blog-top-full-img mb-5">
                  <img class="post-card-image"
                  srcset="{{img_url feature_image size="s"}} 300w,
                  {{img_url feature_image size="m"}} 600w,
                  {{img_url feature_image size="l"}} 1000w,
                  {{img_url feature_image size="xl"}} 2000w"
                  sizes="(max-width: 1000px) 400px, 700px"
                  src="{{img_url feature_image size="m"}}"
                  alt="{{title}}"/>						 
               </div>
               {{/if}}
      <div class="container">
         <div class="row">
            <div class="col-md-10 m-auto">
               <div class="blog-title">
                  <h2 class="heading-2">{{title}}</h2>
               </div>
               <div class="entry-content-header-meta  mb-5">
                  <div class="single-post-tags">
                     <ul class="tags list-inline">
                        {{#foreach tags}}
                        <li class="list-inline-item"><a href="{{url}}">#{{name}}</a></li>
                        {{/foreach}}
                     </ul>
                  </div>
               </div>
               <div class="entry-content">
                  {{content}}
               </div>
               <div class="entry-content-footer mt-5 mb-5 pt-3">
                  <div class="row">
                     <div class="col-md-12">
                        <div class="single-post-share">
                           {{> "social_share"}}
                        </div>
                     </div>
                  </div>
               </div>
               {{#primary_author}}
               <div class="author-bio-details mb-5">
                  {{#if profile_image}}
                  <div class="author-pic">
                     <a href="{{url}}"><img src="{{img_url profile_image}}" alt="{{name}}"/></a>
                  </div>
                  {{/if}}
                  <div class="meta-info">
                     <div class="a-title">
                        <h6><a href="{{url}}"><strong>{{name}}</strong></a></h6>
                     </div>
                     <p>{{bio}}</p>
                     <nav class="share-icon">
                        <ul class="list-inline">
                           {{#if facebook}}
                           <li class="list-inline-item"><a href="{{facebook_url}}"><i class="fa fa-facebook-f"></i></a></li>
                           {{/if}}
                           {{#if twitter}}
                           <li class="list-inline-item"><a href="{{twitter_url}}"><i class="fa fa-twitter"></i></a></li>
                           {{/if}}
                           {{#if website}}
                           <li class="list-inline-item"><a href="{{website}}"><i class="fa fa-globe"></i></a></li>
                           {{/if}}
                        </ul>
                     </nav>
                  </div>
               </div>
               {{/primary_author}}
               <nav class="post-pagination mb-5">
                  <ul class="d-flex justify-content-between themeix-highlight">
                     {{#prev_post}}
                     <li class="themeix-highlight"><a href="{{url}}">{{t "Previous"}}</a></li>
                     {{/prev_post}}
                     <li class="themeix-highlight"><a href="{{url}}">{{t "Newer"}}</a></li>
                  </ul>
               </nav>
               <div class="contact-form">
                  {{> "disqus_comments"}}
               </div>
            </div>
            {{/post}}
         </div>
      </div>
   </div>
</main>