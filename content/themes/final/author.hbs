{{!< default}}
<section class="page-header-area clearfix large-padding pt-5">
   <div class="container">
      <div class="row">
         {{#author}}
         {{!-- Everything inside the #author tags pulls data from the author --}}
         {{#if profile_image}}
         <div class="col-md-6 order-md-12">
            <div class="right-image">
               <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" />
            </div>
         </div>
         {{/if}}
         <div class="col-md-6 order-md-1">
            <div class="header d-md-flex align-items-center" style="height:100%;">
               <div class="header-title">
                  <div class="meta-name">
                     {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}} 
                  </div>
                  <h1 class="author-name heading-1 mb-3">{{t "Author"}} - <span>{{name}}</span></h1>
                  {{#if bio}}
                  <p>{{bio}}</p>
                  {{/if}}
                  <div class="social-icon">
                     <ul class="d-flex">
                        {{#if website}}
                        <li><a href="{{website}}"><i class="fa fa-globe" aria-hidden="true"></i></a></li>
                        {{/if}}
                        {{#if facebook}}
                        <li><a href="{{facebook_url}}"><i class="fa fa-facebook"></i></a></li>
                        {{/if}}
                        {{#if twitter}}
                        <li><a href="{{twitter_url}}"><i class="fa fa-twitter"></i></a></li>
                        {{/if}}
                     </ul>
                  </div>
               </div>
            </div>
         </div>
         {{/author}}
      </div>
   </div>
</section>
<main class="main-content-area section-padding-bottom clearfix">
   <section class="blog-area blog-variation zigzag-loop">
      <div class="container infinite-scroll">
         {{#foreach posts}}
         <div class="row post-style1 infinite-post" data-aos="fade-up">
            {{> "post_loop"}}
         </div>
         {{/foreach}}
      </div>
      <div class="row">
         <div class="col">
            <div class="btn-load text-center">
               {{pagination}}
            </div>
         </div>
      </div>
   </section>
</main>