{{#if feature_image}}
<div class="col-md-6 ">
   <div class="feature-post">
      <div class="post-thumb">
         <div class="post-date"><span>{{date published_at format="MMMM DD, YYYY"}}</span></div>
         {{#if feature_image}}
         <div class="thumb-image">
            {{#if featured}}
            <div class="post-feature-btn"><span>{{t "Featured post"}} <i class="fa fa-star"></i></span></div>
            {{/if}}
            <a href="{{url}}" class="post-loop-featured-image" style="background-image: url({{ feature_image }})" aria-label="{{ title }}" aria-hidden="true" tabindex="-1">
            </a>
         </div>
         {{/if}}
      </div>
   </div>
</div>
{{/if}}  
<div class="{{#if feature_image}}col-md-6{{else}}col-md-12 no-featured-image-post{{/if}}">
   <div class="details">
      {{#primary_tag}}
      <div class="meta-name">
         <h2><a href="{{url}}">{{name}}</a></h2>
      </div>
      {{/primary_tag}}		
      <div class="title">
         <h2><a href="{{url}}">{{title}}</a></h2>
      </div>
      <div class="content">
         <p>{{excerpt words="25"}}</p>
      </div>
      <div class="share-option d-md-flex justify-content-between align-items-center">
         <div class="btn-more float-left"><a href="{{url}}">{{t "Read More"}}</a><i class="fa fa-long-arrow-right"></i></div>
         <div class="post-social-share float-right">
            {{> "social_share"}}
         </div>
      </div>
   </div>
</div>